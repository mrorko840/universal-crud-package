{
    "name": "mrorko840/universal-crud-package",
    "description": "A fully dynamic, table-agnostic CRUD & file upload API package for Laravel.",
    "type": "library",
    "license": "MIT",

    "authors": [
        {
            "name": "Hemel Mridha",
            "email": "mrorko840@gmail.com"
        }
    ],

    "keywords": [
        "laravel",
        "crud",
        "dynamic-crud",
        "universal-crud",
        "file-upload",
        "api",
        "database"
    ],

    "require": {
        "php": ">=8.1",
        "illuminate/support": "^10.0|^11.0|^12.0",
        "illuminate/routing": "^10.0|^11.0|^12.0",
        "illuminate/database": "^10.0|^11.0|^12.0",
        "illuminate/filesystem": "^10.0|^11.0|^12.0"
    },

    "autoload": {
        "psr-4": {
            "UniversalCrud\\": "src/"
        }
    },

    "extra": {
        "laravel": {
            "providers": [
                "UniversalCrud\\UniversalCrudServiceProvider"
            ]
        }
    },

    "minimum-stability": "stable",
    "prefer-stable": true
}
